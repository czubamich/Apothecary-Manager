<catel:UserControl x:Class="ApothecaryManager.WPF.Views.HomeView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                   xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:orccontrols="http://schemas.wildgums.com/orc/controls" xmlns:local="clr-namespace:ApothecaryManager.WPF.Views">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5px"/>
            <RowDefinition MinHeight="180px" Height="1*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" Fill="red"/>
        <Rectangle Grid.Row="1" Grid.Column="0" Grid.RowSpan="1" Fill="#4d8f6b"/>

        <TextBlock FontSize="50">Tu miały być wykresy itd ale zabrakło czasu</TextBlock>

        <local:LogView Grid.Column="0" Grid.Row="2"/>

    </Grid>
</catel:UserControl>
